rt flash.text.TextField;import flash.text.TextFormat;import flash.filters.DropShadowFilter;
import flash.filters.GlowFilter;
class Nya extends Bitmap{    private var _vx  :Number;    private var _vy  :Number;    private var _ay  :Number;    private var _rot :Number;		private var Shadow:DropShadowFilter = new DropShadowFilter(5, 45, 0, 0.3, 0, 0, 1, 1);	private var myGlow:GlowFilter = new GlowFilter(0x7B9BFB, 1 , 4,	 4, 255);        public function Nya(tx:String)    {		var maxWidth:Number = 400;		        var tf :TextField = new TextField();        tf.defaultTextFormat = new TextFormat("_sans", Math.random() * 20 + 32, 0xFFFF00, true);        tf.autoSize = "left";		//tf.autoSize = TextFieldAutoSize.LEFT;        tf.multiline = false;		tf.wordWrap = false;				tf.text = tx;				if (tf.width > maxWidth)		{			tf.multiline = true;			tf.wordWrap = true;			tf.width = maxWidth;		}				        var bmd :BitmapData = new BitmapData(tf.width, tf.height, true, 0);        bmd.draw(tf);	//	this.alpha = .94;        super(bmd, "auto", true);		this.filters = [myGlow, Shadow];		        _vx  =   Math.random() *  16 -  8;        _vy  = - Math.random() *  15 -  30;        _rot =   Math.random() *   8 -   4;        _ay  =   Math.random() * 0.5 + 1.5;    }    public function update()/*:Boolean*/    {        x   += _vx/2.5;        y   += _vy/2.5;        _vy += _ay/2.5;                rotation += _rot/2.5;               // if (1000 < y) return true;     //   return false;    }}